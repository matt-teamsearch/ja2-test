<html lang="en">
<head>
  <meta charset="UTF-8">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
  <script>
    const socket = io();
    socket.emit('logout');
  </script>
  <style>
  body{
    background:url("https://static.wixstatic.com/media/f63e12_8104db29b89a4bf48b179d7bfc1e1117~mv2_d_5184_3456_s_4_2.jpg") no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    font: 14px/20px 'Helvetica Neue', Helvetica, Arial, sans-serif;
    color: #404040;
  }

  #bg-colour {
    background-color: rgba(53, 53, 53, 0.9);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

  .container{
    position: relative;
    margin: 45px auto;
    width: 400px;
    padding-right: 32px;
    font-weight: 300;
    color: #a8a7a8;
  }
  input, button, label {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 15px;
    font-weight: 300;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }

  input[type=text], input[type=password] {
    padding: 0 10px;
    width: 300px;
    height: 40px;
    color: #bbb;
    text-shadow: 1px 1px 1px black;
    background: rgba(0, 0, 0, 0.16);
    border: 0;
    border-radius: 5px;
    -webkit-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.06);
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.06);
  }
  input[type=text]:focus, input[type=password]:focus {
    color: white;
    background: rgba(0, 0, 0, 0.1);
    outline: 0;
  }

  label {
    float: left;
    width: 100px;
    line-height: 40px;
    padding-right: 10px;
    font-weight: 100;
    text-align: right;
    letter-spacing: 1px;
    border-radius: 2px;
    color: white;
  }
  .login-submit {
    position: absolute;
    top: 8px;
    right: 0;
    width: 48px;
    height: 48px;
    padding: 8px;
    border-radius: 32px;
    -webkit-box-shadow: 0 0 4px rgba(10, 2, 24, 0.35);
    box-shadow: 0 0 4px rgba(10, 2, 24, 0.35);
  }
  .login-submit:before, .login-submit:after {
    content: '';
    z-index: 1;
    position: absolute;
  }
  .login-submit:before {
    top: 28px;
    left: -4px;
    width: 4px;
    height: 10px;
    -webkit-box-shadow: inset 0 1px rgba(10, 2, 24, 0.06);
    box-shadow: inset 0 1px rgba(10, 2, 24, 0.06);
  }
  .login-submit:after {
    top: -4px;
    bottom: -4px;
    right: -4px;
    width: 36px;
  }

  .login-button {
    position: relative;
    z-index: 2;
    width: 48px;
    height: 48px;
    padding: 0 0 48px;
    text-indent: 120%;
    white-space: nowrap;
    overflow: hidden;
    background: none;
    border: 0;
    border-radius: 24px;
    cursor: pointer;
    -webkit-box-shadow: inset 0 1px 1px rgba(10, 2, 24,, 0.2), 0 1px rgba(10, 2, 24,, 0.1);
    box-shadow: inset 0 1px 1px rgba(10, 2, 24,, 0.2), 0 1px rgba(10, 2, 24,, 0.1);
  }
  .login-button:before {
    content: '';
    position: absolute;
    top: 5px;
    bottom: 5px;
    left: 5px;
    right: 5px;
    background: #00a2d3;
    border-radius: 24px;
    background-image: -webkit-linear-gradient(top, #210748, #0A0218);
    background-image: -moz-linear-gradient(top, #210748, #0A0218);
    background-image: -o-linear-gradient(top, #210748, #0A0218);
    background-image: linear-gradient(to bottom, #210748, #0A0218);
    -webkit-box-shadow: inset 0 0 0 1px #210748, 0 0 0 5px rgba(0, 0, 0, 0.16);
    box-shadow: inset 0 0 0 1px #0A0218, 0 0 0 5px rgba(0, 0, 0, 0.16);
  }
  .login-button:active:before {
    background: #0591ba;
    background-image: -webkit-linear-gradient(top, #110730, #0A0218);
    background-image: -moz-linear-gradient(top, #110730, #0A0218);
    background-image: -o-linear-gradient(top, #110730, #0A0218);
    background-image: linear-gradient(to bottom, #110730, #0A0218);
  }
  .login-button:after {
    content: '';
    position: absolute;
    top: 15px;
    left: 12px;
    width: 25px;
    height: 19px;
  }
  ::-moz-focus-inner {
    border: 0;
    padding: 0;
  }

  .lt-ie9 input[type=text], .lt-ie9 input[type=password] {
    line-height: 40px;
    background: #282828;
  }
  .lt-ie9 .login-submit {
    position: absolute;
    top: 12px;
    right: -28px;
    padding: 4px;
  }
  .lt-ie9 .login-submit:before, .lt-ie9 .login-submit:after {
    display: none;
  }
  .lt-ie9 .login-button {
    line-height: 48px;
  }
  .lt-ie9 .about {
    background: #313131;
  }

.header{
  width:100%;
  background: linear-gradient(-65deg, #210748, #1A0835, #0A0218, #2D243A);
	background-size: 400% 400%;
	-webkit-animation: Gradient 60s ease infinite;
	-moz-animation: Gradient 60s ease infinite;
	animation: Gradient 60s ease infinite;
  font-family: 'Merienda', cursive;
  font-size:4em;
  color:white;
  text-align: center;
  padding-top:50px;
  padding-bottom:50px;
  text-shadow: 0 0 2px #210748, 0 0 5px #210748, 0 0 7px #210748, 0 0 10px #210748, 0 0 15px #210748, 0 0 20px #210748, 0 0 25px #210748, 0 0 35px #210748;
}

@-webkit-keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}

@-moz-keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}

@keyframes Gradient {
	0% {
		background-position: 0% 50%
	}
	50% {
		background-position: 100% 50%
	}
	100% {
		background-position: 0% 50%
	}
}


@-moz-keyframes JumpAround {
	0% {
		height:10px;
    width:2px;
    left:50%;
    top:50%;
	}
	50% {
    height:2px;
    width:10px;
    left:70%;
    top:80%;
	}
	100% {
    height:10px;
    width:2px;
    left:50%;
    top:50%;
	}
}

.message {
  color: white;
  font-size: 24px;
  text-align: center;
}

.forgot {
  float: right;
  color: white!important;
}
.subHeader a{
  text-decoration: none;
  background: #ffffff;
  padding: 5px;
  border-radius: 6px;
  color: #5e5e5e;
  font-size: smaller;
  vertical-align: middle;
  display: flex;
  width: 134px;
  justify-content: center;
  align-items: flex-start;
  margin: 5 auto;
  font-family: system-ui;
  font-weight: 700;
}
.subHeader{
  text-align: center;
}
.subHeader a:hover {
  background: gainsboro;
  color: #0591ba;
}
.subHeader img {
  height: 19px;
  border-radius: 2px;
  margin-right: 4px;
}
.subHeader a:hover>img {
  mix-blend-mode: darken;
}
</style>
<link href="https://fonts.googleapis.com/css?family=Merienda|Open+Sans" rel="stylesheet">
