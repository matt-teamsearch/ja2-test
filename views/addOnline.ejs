<%- include('partials/'+versionPages.header) %>
<div class="container" style="padding-top:70px;">
  <% if (message) { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <div class="card text-dark bg-light mb-2 text-center">
      <div class="card-body">
        <h5 class="card-title">Add Panel Costs</h5>
        <form class="add-project-form form-styles" action="" method="post" enctype="multipart/form-data">
          <input type="text" name="user" id="user" style="display:none;">
          <input type="text" name="projectID" id="projectID" style="display:none;" value="<%= projectID %>">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="completes">Number of Completed Interviews</label>
              <input type="number" class="form-control" name="completes" id="completes" value="" required step="1" min="0">
            </div>
            <div class="form-group col-md-4">
              <label for="incType">Total Cost of Interviews</label>
              <input type="number" class="form-control" name="cost" id="cost" value="" required step="0.01" min="0">
            </div>
            <div class="form-group col-md-4">
              <label for="provider">Select Provider</label>
              <select class="selectpicker" data-style="btn-info" name="provider" id="provider">
                <optgroup label="Select Table">
                  <option value="" >Select Provider</option>
                  <% providers.forEach((provider, index) => { if(provider.onlinePanelID >1) {%>
                    <option value="<%= provider.onlinePanelID %>"><%= provider.onlinePanelName %></option>
                    <% }}) %>
                  </optgroup>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Add Online Completes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
