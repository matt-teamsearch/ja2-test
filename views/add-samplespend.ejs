<%- include('partials/'+versionPages.header) %>
<div class="container" style="padding-top:70px;">
  <% if (message) { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <% if (project) { %>
        <div class="card text-dark bg-light mb-2 text-center">
          <div class="card-body">
            <h5 class="card-title"><%= project.quoteNo %> <%= project.quoteName %> Add sample spend</h5>
            <form class="add-sample-form pd-form form-styles" action="" method="post" enctype="multipart/form-data">
              <input type="text" name="user" id="user" style="display:none;">
              <div class="form-row">
                <div class="form-group col-md-3">
                  <label for="sampCount">Records count</label>
                  <input type="number" class="form-control" name="sampCount" id="sampCount" value="" required step="1" min="0">
                </div>
                <div class="form-group col-md-3">
                  <label for="sampCost">Total sample cost</label>
                  <input type="number" class="form-control" name="sampCost" id="sampCost" value="" required step="0.01" min="0">
                </div>
                <div class="form-group col-md-3">
                  <label for="otherCostAmount">Sample provider</label>
                  <select class="selectpicker" data-style="btn-info" name="provName" id="provName">
                    <optgroup label="Select Table">
                      <option value="" >Select provider</option>
                      <% providers.forEach((provider , index) => { %>
                        <option value="<%= provider.sampleProviderID %>"><%= provider.sampleProviderName %></option>
                        <% }) %>
                      </optgroup>
                    </select>
                  </div>
                </div>
                <button type="submit" class="btn btn-success float-right">Add Sample</button>
              </form>

              <% } else { %>
                <p class="text-center">Project Not Found. Go <a href="/add">here</a> to add Projects.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </body>
      </html>
