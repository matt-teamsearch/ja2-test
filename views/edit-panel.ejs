<%- include('partials/'+versionPages.header) %>
<div class="container" style="padding-top:70px;">
  <div class="card-header text-center py-2"><strong><% costs.forEach((cost, index) => { if (index == 0) {  %> <%= cost.quoteNo %> <%= cost.quoteName %> <%= cost.jobName %> <% } else {} }) %> Edit Cost</strong></div>
  <form class="add-project-form" action="" method="post" enctype="multipart/form-data" style="border:1px solid #ced4da; padding:50px;">
    <input type="text" name="user" id="user" style="display:none;">
    <%  costs.forEach((cost , index) => { %>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="costAm">Number of interviews</label>
        <input type="number" class="form-control" name="compNo" id="compNo" value="<%= cost.completesNumber %>" required step="1" min="0">
      </div>
      <div class="form-group col-md-4">
        <label for="costNa">Interview Cost (total)</label>
        <input type="number" class="form-control" name="intCost" id="intCost" value="<%= cost.interviewCost %>" required step="0.01" min="0">
      </div>
      <div class="form-group col-md-4">
        <label for="provider">Select Provider</label>
        <select class="selectpicker" data-style="btn-info" name="provider" id="provider">
          <optgroup label="Select Table">
            <option value="" >Select Provider</option>
            <% providers.forEach((provider, index) => { %>
              <option value="<%= provider.onlinePanelID %>" <%if(provider.onlinePanelID == cost.onlinePanelID) {%>selected<%}%>><%= provider.onlinePanelName %></option>
              <% }) %>
            </optgroup>
          </select>
        </div>
    </div>
    <% }) %>
    <button type="submit" class="btn btn-success float-right">Update Cost</button>
  </form>
</div>
</body>
</html>
