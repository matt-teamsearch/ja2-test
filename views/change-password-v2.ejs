<% include partials/login-header-v2.ejs %>
<style>

</style>
<div id="bg-colour">
  <div style="margin: auto;height: 100%;display: flex;">
    <form class="login-form" action="" method="post" enctype="multipart/form-data">
      <% if (message) { %>
        <p class="text-center text-danger message"><%= message %></p>
      <% } %>
      <label for="password">Enter a new password</label>
      <input type="password" name="password" class="form-control" id="password" placeholder="New password" />
      <input type="password" name="confirmationpass" class="form-control" id="confirmationpass" placeholder="Confirm password" />
      <div class="login-submit">
      <button type="submit" class="btn btn-light submit login-button">Change password</button>
      </div>
    </form>
  </div>
</div>
</body>
</html>
