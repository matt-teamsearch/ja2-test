<%- include('partials/'+versionPages.header) %>
<div class="container" style="padding-top:70px;">
  <div class="card-header text-center py-2"><strong><% samples.forEach((sample, index) => { if (index == 0) {  %> <%= sample.quoteNo %> <%= sample.quoteName %> <%= sample.jobName %> <% } else {} }) %> Edit Sample Spend</strong></div>
  <form class="add-project-form" action="" method="post" enctype="multipart/form-data" style="border:1px solid #ced4da; padding:50px;">
    <input type="text" name="user" id="user" style="display:none;">
    <%  samples.forEach((sample , index) => { %>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="sampCount">Records count</label>
          <input type="number" class="form-control" name="sampCount" id="sampCount" value="<%= sample.sampleCount %>" required step="1" min="0">
        </div>
        <div class="form-group col-md-3">
          <label for="sampCost">Total sample cost</label>
          <input type="number" class="form-control" name="sampCost" id="sampCost" value="<%= sample.totalCost %>" required step="0.01" min="0">
        </div>
        <div class="form-group col-md-3">
          <label for="otherCostAmount">Sample provider</label>
          <select class="selectpicker" data-style="btn-info" name="provName" id="provName">
            <optgroup label="Select Table">
              <option value="" >Select provider</option>
              <%  providers.forEach((provider , index) => { %>
                <option value="<%= provider.sampleProviderID %>" <% if (sample.sampleProviderID == provider.sampleProviderID) {%> selected <%}%>> <%= provider.sampleProviderName %></option>
                <% }) %>
              </optgroup>
            </select>
          </div>
        </div>
        <% }) %>
        <button type="submit" class="btn btn-success float-right">Update Sample Spend</button>
      </form>
    </div>
  </body>
  </html>
