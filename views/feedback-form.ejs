<%- include('partials/'+versionPages.header) %>

<div class="container" style="padding-top:70px;">
  <div class="card text-dark bg-light mb-2 text-center">
    <div class="card-body">
      <h3 class="card-title">Send feedback or report a bug</h3>
      <h6 class="card-title" class="text-danger" style="color:green;"><%= message %></h6>
      <form class="add-client-form" action="" method="post" enctype="multipart/form-data" style="border:1px solid #ced4da; padding:50px;">
        <input type="text" name="user" id="user" style="display:none;">
        <div class="form-row">
        </div>
        <div class="form-group col-md-12 d-flex">
          <input type="text" class="form-control" name="page" id="page" placeholder="Page with error" style="width:50%; display:none;">
        </div>
        <div class="form-group col-md-12 d-flex">
          <textarea class="form-control" name="feedback" id="feedback" rows="4" cols="50" placeholder="Feedback details..." required></textarea>
        </div>
        <div class="form-group col-md-12">
          <button type="submit" class="btn btn-primary">Send feedback</button>
        </div>
      </div>
    </div>
  </div>
</form>
</div>
</div>
</body>
</html>
